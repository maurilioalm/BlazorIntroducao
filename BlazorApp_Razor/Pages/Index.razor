@page "/"
@* Comentário *@
<h1>Olá, @nome.ToLower()!</h1>
<h1>data e hora: @DateTime.Today</h1>
<h1>Dia da semana: @diaDaSemana.ToUpper()</h1>
<hr />
<h1>@Saudacao(nome)</h1>
<hr />
<h1> 2 + 2 = @(2+2) </h1>
<hr />
<button @onclick="@TrataCliqueBotao">Clique aqui</button>

@code{
    string nome = "Maurilio";
    private string diaDaSemana = DateTime.Now.DayOfWeek.ToString();

    private string Saudacao(string nome){
        var mesagem = "Bem-Vindo " + nome.ToUpper();
        return mesagem;
    }

    private void TrataCliqueBotao() {
        Console.WriteLine("Fui clicado");
    }


}
